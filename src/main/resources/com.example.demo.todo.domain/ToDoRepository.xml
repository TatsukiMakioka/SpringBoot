<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.ToDoRepository">

    <!-- Retrieve all ToDo items -->
    <select id="selectAll" resultType="com.example.demo.domain.dto.ToDoData">
        SELECT * FROM ToDo
    </select>

    <!-- Save a new ToDo item -->
    <insert id="save" parameterType="com.example.demo.domain.dto.ToDoData">
        INSERT INTO ToDo (id, title, description, createdAt, updatedAt, finishedAt)
        VALUES (#{id}, #{title}, #{description}, #{createdAt}, #{updatedAt}, #{finishedAt})
    </insert>

    <!-- Delete a ToDo item by ID -->
    <delete id="delete" parameterType="string">
        DELETE FROM ToDo WHERE id = #{id}
    </delete>

    <!-- Update an existing ToDo item -->
    <update id="update" parameterType="com.example.demo.domain.dto.ToDoData">
        UPDATE ToDo
        SET title = #{title}, description = #{description}, updatedAt = #{updatedAt}, finishedAt = #{finishedAt}
        WHERE id = #{id}
    </update>

    <!-- Retrieve a single ToDo item by ID -->
    <select id="select" parameterType="string" resultType="com.example.demo.domain.dto.ToDoData">
        SELECT * FROM ToDo WHERE id = #{id}
    </select>

    <!-- Search for ToDo items by keyword in title or description -->
    <select id="search" parameterType="string" resultType="com.example.demo.domain.dto.ToDoData">
        SELECT * FROM ToDo WHERE UPPER(title) LIKE UPPER(#{value}) OR UPPER(description) LIKE UPPER(#{value})
    </select>
</mapper>
